@model StudentManagement.Models.Student

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Date of Birth</th>
                <th>Gender</th>
                <th>Place of Birth</th>
                <th>Mobile</th>
                <th>Graduated</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ID</td>
                <td>@Model.LastName</td>
                <td>@Model.FirstName</td>
                <td>@Model.DateOfBirth.ToString("dd/MM/yyyy")</td>
                <td>@Model.Gender</td>
                <td>@Model.PlaceOfBirth</td>
                <td>@Model.Mobile</td>
                <td>@(Model.IsGraduated ? "Yes" : "No")</td>
                <td>@Model.Age</td>
            </tr>
        </tbody>
    </table>
}
else
{
    <p>No student found with such requirements.</p>
}
<a asp-action="Index" class="btn btn-primary">Back to Student Management</a>